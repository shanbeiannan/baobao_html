/* pages/order/orderdetail.wxss */
.car-order-status{
  background-color:#21c179;  
  width:100%;  
  color:#fff;
}
.car-order-status-list{
  padding:25rpx 36rpx;
}
.car-order-status-list:last-child{
  padding:0 36rpx 25rpx 36rpx;
}
.car-order-status-list text{
  margin-right:15rpx;
}
.car-order-status-list text.right{
  font-size:46rpx;
  font-weight: bolder;
}

.car-info{
  width:100%;
  border-bottom:20rpx #f8f8f8 solid;
}

.car-info-list{
  display:flex;
  flex-direction: row;
  align-items: center;
  padding:10rpx 36rpx;
}

.car-info-list image{
  width:50rpx;
  height:50rpx;
  vertical-align: middle;
}
.car-info-list-text{
  font-weight: bold;
  font-size:32rpx;
}

.car-info-list-right{
  font-size:32rpx;
  color:#999;
}

.padding-b-self{
  padding-bottom:0;
}

.my-button{
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  justify-items: center;
  align-items: center;
  line-height: 40px;
}
button:not([size='mini']){
  width:auto !important;
}
button[type='default']{
  color:#999;
}
.weui-btn+.weui-btn{
  margin-top: 0 !important;
}

.button-hover{
  background-color: transparent;
}