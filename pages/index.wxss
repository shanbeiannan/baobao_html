/* pages/index.wxss */
.head{
  margin-top:70rpx;
  margin-left:30rpx;
  display:flex;
  flex-direction: row;
  
}
.head_left{
  flex:0.5;
}
.head_left text{
  font-size:30rpx;
  margin-left:10rpx;
  vertical-align: middle;
  line-height: 30rpx;
}

.head_center{
  flex:1;
}
.head_center text{
   font-size:38rpx;
   
}


.maodian{
  text-align: center;
  vertical-align: middle;
  width:34rpx;
  height:36rpx;
}



.banner{
  width: 95%;
	height: 200rpx;
  border-radius: 20rpx;
  text-align: center;
  vertical-align: middle;
  margin:10rpx 0;
 
}
.banner-contair{
  width:100%;
  height:100%;
  border-radius: 20rpx;
}

.banner-contair image{
  width:100%;
  height:100%;
  border-radius: 20rpx; 
}
/* 三块 */
.container_green,.container_blue,.container_yellow{
  margin:10rpx;
  width: 95%;
	height: 150rpx;
	background-color: #21c179;
	border-radius: 20rpx;
  display:flex;
  flex-direction: row;
}
.container_blue{
  background-color: #4e7bff;
}

.container_yellow{
  background-color: #fec244;

}

.container_info_left image{
  width:110rpx;
  height:110rpx;
  margin:20rpx 30rpx;

}

.container_info_center{
  display:flex;
  flex-direction: column;
  margin-top:10rpx;
}
.center_title{
  color:#fff;
  font-size:34rpx;
  font-weight: 600;
  margin-top:25rpx;
  line-height: 36rpx;
}
.center_content{
  text-overflow: ellipsis;
  white-space: nowrap;
  color:#fff;
  font-size:30rpx;
  margin-top:20rpx;
  line-height:30rpx;
}

.container_info_right image{
  width:40rpx;
  height:40rpx;
  margin:55rpx 0 50rpx;  
 text-align: left;
}


.list_h, .list_b {
  margin: 20rpx auto;
  display: flex;
  flex-direction: row;
  width: 95%;
}

.list_h_tip {
  width: 16rpx;
  height: 38rpx;
  background-color: #21c179;
  border-radius: 10rpx;
  margin-right: 10rpx;
}

.list_h_title {
  font-size: 34rpx;
  line-height: 38rpx;
  flex: 1;
}

.list_h_left {
  font-size: 30rpx;
  line-height: 44rpx;
  color: #333;
}

.list_b_model {
  display: flex;
  flex-direction: column;
  text-align: center;
  flex: 1;
}

.list_b_img {
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx auto;
}

.list_b_text {
  text-align: center;
  font-size: 24rpx;
  line-height: 24rpx;
}

.list_b_step {
  text-align: center;
  vertical-align: middle;
  margin: 20rpx auto;
}

.list_b_step image {
  width: 30rpx;
  height: 30rpx;
}

.scroll-tab-bar{
  box-sizing: border-box;
  white-space: nowrap;
}
.tab-bar-item{  
  display: inline-block;
  background-color:#f8f8f8;
  width:240rpx;
  border-radius: 10rpx;
  margin-right:20rpx;
  padding:20rpx;
}

.item_img image{
  width:60rpx;
  height:60rpx;
  margin:0 auto 20rpx ;
}
.item_title{
  font-size:24rpx;
  line-height: 24rpx;
  flex:1;
  margin-bottom:60rpx;
}
.item_footer .item_price{
  font-size:40rpx;
  line-height: 40rpx;
}
.item_footer .item_unit{
  font-size:24rpx;
  line-height:40rpx;
  vertical-align: middle;
}

.list_b_container{
  padding:0 16rpx;
}

.list_b_item{
  padding:40rpx 0;
  border-top:1px solid #eee;
  flex: 1;
}
.list_b_item_children{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list_b_item_children_top,
.list_b_item_children_bottom{
  display: flex;
  align-items: center;
}
.list_b_item_children_top
.list_b_item_children_bottom{
  font-size: 30rpx;
}
.list_b_item_children_top .text-1,
.list_b_item_children_bottom .text-2{
  padding-left: 16rpx;
  font-size: 30rpx;
}
 .text-3{
  font-size: 30rpx;
}
.list_b_item_children_top .text-1{
  font-weight: bold;
}
.list_b_item_children .list_b_item_children_icon1{
  width: 30rpx;
  height: 30rpx;
}
.list_b_item_children .list_b_item_children_icon2,
.list_b_item_children .list_b_item_children_icon3{
  width: 45rpx;
  height: 45rpx;
}
.list_b_item_children .list_b_item_children_icon3{
  width: 33rpx;
  height: 33rpx;
}
.shuxian{
  height: 40rpx;
  margin-left: 13rpx;
  border-left: 1rpx dashed #bdbdbd;
}
.list_b_item_children_bottom .list_b_item_zan{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #ff4c5a;
  margin-left: 10rpx;
}

.footer{
  width:100%;
}

.footer image{
  width:100%;
  height:200rpx;
}